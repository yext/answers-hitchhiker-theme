<div class="HitchhikerAccordionCard yxt-{{cardName}} js-HitchhikerAccordionCard{{#if card.isExpanded}} HitchhikerAccordionCard--expanded{{/if}}"
     id="{{id}}">
  <button class="HitchhikerAccordionCard-toggle js-HitchhikerAccordionCard-toggle"
    aria-expanded="{{#if card.isExpanded}}true{{else}}false{{/if}}"
    aria-controls="{{id}}"
    tabindex="0">
    <h3 class="HitchhikerAccordionCard-title">
      {{{card.title}}}
    </h3>
    <div class="HitchhikerAccordionCard-icon js-HitchhikerAccordionCard-icon{{#if card.isExpanded}} HitchhikerAccordionCard-icon--expanded{{/if}}"
      data-component="IconComponent"
      data-opts='{"iconName": "chevron"}'
      data-prop="icon">
    </div>
  </button>
  <div class="HitchhikerAccordionCard-content js-HitchhikerAccordionCard-content"
       aria-hidden="{{#if card.isExpanded}}false{{else}}true{{/if}}">
    {{#if card.subtitle}}
      <div class="HitchhikerAccordionCard-subtitle">
        {{{card.subtitle}}}
      </div>
    {{/if}}
    {{#if card.details}}
      <div class="HitchhikerAccordionCard-details">
        {{{card.details}}}
      </div>
      {{#if excessDetailsToggle}}
        <button class="HitchhikerCard-details-toggle HitchhikerAccordionCard-details-toggle js-HitchhikerCard-details-toggle">
        {{#if hideExcessDetails}}
          {{card.showMoreDetails.showMoreText}}
          <span data-component="IconComponent"
            data-opts='{ "iconName": "chevron", "classNames": "Icon--sm Icon-collapseDown" }'></span>
        {{else}}
          {{card.showMoreDetails.showLessText}}
          <span data-component="IconComponent"
            data-opts='{ "iconName": "chevron", "classNames": "Icon--sm Icon-collapseUp" }'></span>
        {{/if}}
        </button>
      {{/if}}
    {{/if}}
    {{#if (any (all card.CTA1 card.CTA1.url) (all card.CTA2 card.CTA2.url))}}
      <div class="HitchhikerAccordionCard-ctasWrapper">
        {{#if card.CTA1.url}}
        <div class="HitchhikerAccordionCard-primaryCTA">
          {{#with card.CTA1}}
            {{> CTA }}
          {{/with}}
        </div>
        {{/if}}
        {{#if card.CTA2.url}}
        <div class="HitchhikerAccordionCard-secondaryCTA">
          {{#with card.CTA2}}
            {{> CTA }}
          {{/with}}
        </div>
        {{/if}}
      </div>
    {{/if}}
  </div>
</div>

{{#*inline 'CTA'}}
<a class="Hitchhiker-cta js-Hitchhiker-cta{{#if modifiers}} {{modifiers}}{{/if}}"
   href="{{url}}"
   data-eventtype="{{eventType}}"
   data-eventoptions='{{json eventOptions}}'
   target={{#if target}}"{{target}}"{{else}}"_top"{{/if}}>
  {{#if (any iconName iconUrl)}}
  <div class="Hitchhiker-cta-iconWrapper">
    <div class="Hitchhiker-cta-icon" data-component="IconComponent" data-opts='{ 
      "iconUrl": "{{iconUrl}}",
      "iconName": "{{iconName}}"
    }'>
    </div>
  </div>
  {{/if}}
  <div class='Hitchhiker-cta-iconLabel'>
    {{label}}
  </div>
</a>
{{/inline}}