<div class="yxt-StandardCard">
  <div class="yxt-StandardCard-wrapper">
    <div class="yxt-StandardCard-contentWrapper">
      {{#if card.title}}
      <div class="yxt-StandardCard-title">
        <a {{#if card.titleUrl}} href="{{card.titleUrl}}" target={{#if card.newWindow}}"_blank"
          rel="noopener noreferrer nofollow" {{else}}"_self"{{/if}} {{/if}}>
          {{card.title}}
        </a>
      </div>
      {{/if}}
      {{#if card.subtitle}}
      <div class="yxt-StandardCard-subtitle">
        {{card.subtitle}}
      </div>
      {{/if}}
      <div class="yxt-StandardCard-content">
        {{#if card.details}}
        <div class="yxt-StandardCard-card.details">
          <div class="yxt-StandardCard-detailsText">
            {{card.details}}
          </div>
        </div>
        {{/if}}
        {{#each card.callsToAction}}
          {{> CTA cta=this}}
        {{/each}}
      </div>
    </div>
  </div>
</div>

{{#*inline 'CTA'}}
<a class='yxt-CTA js-yxt-CTA{{#each modifiers}} yxt-CTA--{{this}}{{/each}}' {{#if url}} href="{{url}}"
  target={{#if newWindow}}"_blank" rel="noopener noreferrer nofollow" {{else}}"_self"{{/if}} {{/if}}>
  {{#if iconName}}
    <div class="yxt-CTA-icon"
         data-component="IconComponent"
         data-opts='{ "iconName": "{{iconName}}" }'>
    </div>
  {{/if}}
  <div class='yxt-CTA-iconLabel'>
    {{label}}
  </div>
</a>
{{/inline}}
