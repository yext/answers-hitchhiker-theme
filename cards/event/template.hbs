<div class="HitchhikerEventCard {{cardName}}">
  <div class="HitchhikerEventCard-wrapper">
    {{#if (all card.date.day card.date.month) }}
      <div class="HitchhikerEventCard-dateWrapper">
        <div class="HitchhikerEventCard-dateInnerWrapper">
          <span class="HitchhikerEventCard-day">{{card.date.day}}</span>
          <span class="HitchhikerEventCard-month">{{card.date.month}}</span>
        </div>
      </div>
    {{/if}}
    <div class="HitchhikerEventCard-contentWrapper">
      <div class="HitchhikerEventCard-info">
        {{#if card.title}}
        <div class="HitchhikerEventCard-title">
          {{#if card.url}}
            <a class="HitchhikerEventCard-titleLink"
              href="{{card.url}}"
              data-eventtype="TITLE_CLICK"
              data-eventoptions='{{json card.titleEventOptions}}'
              target={{#if card.target}}"{{card.target}}"{{else}}"_top"{{/if}}>
              {{card.title}}
            </a>
          {{else}}
            {{card.title}}
          {{/if}}
        </div>
        {{/if}}
        {{#if card.subtitle}}
        <div class="HitchhikerEventCard-subtitle">
          {{card.subtitle}}
        </div>
        {{/if}}
        {{#if card.details}}
        <div class="HitchhikerEventCard-content">
          <div class="HitchhikerEventCard-detailsText">
            {{card.details}}
          </div>
          {{#if excessDetailsToggle}}
            <button class="HitchhikerCard-details-toggle js-HitchhikerCard-details-toggle">
            {{#if hideExcessDetails}}
              {{card.showMoreDetails.showMoreText}}
              <span data-component="IconComponent"
                data-opts='{ "iconName": "chevron", "classNames": "Icon--sm Icon-collapseDown" }'></span>
            {{else}}
              {{card.showMoreDetails.showLessText}}
              <span data-component="IconComponent"
                data-opts='{ "iconName": "chevron", "classNames": "Icon--sm Icon-collapseUp" }'></span>
            {{/if}}
            </button>
          {{/if}}
        </div>
        {{/if}}
      </div>
      {{#if (any card.CTA1.url card.CTA2.url) }}
      <div class="HitchhikerEventCard-ctasWrapper">
        {{#if (all card.CTA1.url card.CTA1.label)}}
        <div class="HitchhikerEventCard-primaryCTA">
          {{#with card.CTA1}}
            {{> CTA}}
          {{/with}}
        </div>
        {{/if}}
        {{#if (all card.CTA2.url card.CTA2.label)}}
        <div class="HitchhikerEventCard-secondaryCTA">
          {{#with card.CTA2}}
            {{> CTA}}
          {{/with}}
        </div>
        {{/if}}
      </div>
      {{/if}}
    </div>
  </div>
</div>

{{#*inline 'CTA'}}
  <a class="Hitchhiker-cta js-Hitchhiker-cta{{#if modifiers}} {{modifiers}}{{/if}}"
    href="{{url}}"
    data-eventtype="{{eventType}}"
    data-eventoptions='{{json eventOptions}}'
    target={{#if target}}"{{target}}"{{else}}"_top"{{/if}}>
    {{#if (any iconName iconUrl)}}
    <div class="Hitchhiker-cta-iconWrapper">
      <div class="Hitchhiker-cta-icon"
          data-component="IconComponent"
          data-opts='{ {{#if iconName}}"iconName": "{{iconName}}"{{/if}}{{#if iconUrl}}, "iconUrl": "{{iconUrl}}"{{/if}} }'>
      </div>
    </div>
    {{/if}}
    <div class='Hitchhiker-cta-iconLabel'>
      {{label}}
    </div>
  </a>
{{/inline}}