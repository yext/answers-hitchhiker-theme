if (typeof ComponentManagers !== 'undefined' && ComponentManagers.Facets) {
  ANSWERS.addComponent('Facets', {
    container: '#js-answersFacets',
    {{#if verticalKey}}
      verticalKey: '{{{verticalKey}}}',
    {{/if}}
    ...{{{ json componentSettings.Facets }}},
    ...JsHelpers.getLifecycleMethods(ComponentManagers.Facets)
  });
} else {
  ANSWERS.addComponent('Facets', {
    container: '#js-answersFacets',
    {{#if verticalKey}}
      verticalKey: '{{{verticalKey}}}',
    {{/if}}
    ...{{{ json componentSettings.Facets }}}
  });
}