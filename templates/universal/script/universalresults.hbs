ANSWERS.addComponent('UniversalResults', Object.assign({{{ json componentSettings.UniversalResults }}}, {
    container: '#standard-searchresults-container',
    config: {
        {{#each verticalConfigs}}
            {{currentVertical}}: {
                {{#with (lookup verticalsToConfig currentVertical)}}
                    {{#if cardType}}
                        card: {
                            cardType: '{{cardType}}'
                        },
                    {{/if}}
                    sectionTitle: {{#if sectionTitle}}'{{sectionTitle}}'{{else}}'{{../currentVertical}}'{{/if}},
                    {{#if icon}}
                        sectionTitleIconName: '{{icon}}',
                    {{/if}}
                    viewAllText: {{#if viewAllText}}{{viewAllText}}{{else}}'View All'{{/if}},
                    verticalPages: [
                    {{#with ../../verticalConfigs}}
                      {{#each this}}
                        {
                          verticalKey: '{{currentVertical}}',
                          {{#with (lookup verticalsToConfig currentVertical)}}
                            {{#if icon}}icon: '{{icon}}',{{/if}}
                            label: {{#if label}}'{{label}}'{{else}}{{#if ../currentVertical}}'{{../currentVertical}}'{{else}}'{{@key}}'{{/if}}{{/if}},
                            url: {{#if url}}'{{url}}'{{else}}'{{@key}}.html'{{/if}},
                          {{/with}}
                        }{{#unless @last}},{{/unless}}
                      {{/each}}
                    {{/with}}
                    ],
                {{/with}}
            },
        {{/each}}
    }
}));