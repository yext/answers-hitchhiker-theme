ANSWERS.addComponent('UniversalResults', Object.assign({{{ json componentSettings.UniversalResults }}}, {
    container: '.js-answersUniversalResults',
    verticals: {
        {{#each verticalConfigs}}
            {{verticalKey}}: {
                {{#with (lookup verticalsToConfig verticalKey)}}
                    {{#if cardType}}
                        card: {
                            cardType: '{{cardType}}'
                        },
                    {{/if}}
                    title: {{#if sectionTitle}}'{{sectionTitle}}'{{else}}{{#if label}}'{{label}}'{{else}}'{{../verticalKey}}'{{/if}}{{/if}},
                    {{#if icon}}
                        icon: '{{icon}}',
                    {{/if}}
                    viewMoreLabel: {{#if viewAllText}}{{viewAllText}}{{else}}'View All'{{/if}},
                    verticalPages: [
                    {{#with ../../verticalConfigs}}
                      {{#each this}}
                        {
                          verticalKey: '{{verticalKey}}',
                          {{#with (lookup verticalsToConfig verticalKey)}}
                            {{#if icon}}icon: '{{icon}}',{{/if}}
                            label: {{#if label}}'{{label}}'{{else}}{{#if ../verticalKey}}'{{../verticalKey}}'{{else}}'{{@key}}'{{/if}}{{/if}},
                            url: {{#if url}}'{{url}}'{{else}}'{{@key}}.html'{{/if}},
                          {{/with}}
                        }{{#unless @last}},{{/unless}}
                      {{/each}}
                    {{/with}}
                    ],
                {{/with}}
            },
        {{/each}}
    }
}));