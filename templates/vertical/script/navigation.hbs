ANSWERS.addComponent('Navigation', Object.assign({{{ json componentSettings.navigation }}}, {
container: '#standard-navigation-container',
verticalPages: [
{{#each verticalConfigs}}
  {
    verticalKey: '{{currentVertical}}',
    {{#each ../excludedVerticals}}{{#ifeq this ../currentVertical}}hideInNavigation: true,{{/ifeq}}{{/each}}
    {{#ifeq ../currentVertical currentVertical}}isActive: true,{{/ifeq}}
    {{#with (lookup verticalsToConfig currentVertical)}}
      {{#ifeq isFirst 'true'}}isFirst: true,{{/ifeq}}
      {{#if icon}}icon: '{{icon}}',{{/if}}
      label: {{#if label}}'{{label}}'{{else}}{{#if ../currentVertical}}'{{../currentVertical}}'{{else}}'{{@key}}'{{/if}}{{/if}},
      url: {{#if url}}'{{url}}'{{else}}'{{@key}}.html'{{/if}},
    {{/with}}
  }{{#unless @last}},{{/unless}}
{{/each}}
]
}));
