<div class="HitchhikerAllFieldsStandard {{cardName}}">
  <div class="HitchhikerAllFieldsStandard-title">
    {{> icon }}
    <h2 class="HitchhikerAllFieldsStandard-titleText">
      {{> title }}
    </h2>
  </div>
  <div class="HitchhikerAllFieldsStandard-content">
    {{> content }}
    {{> details }}
    <div class="HitchhikerAllFieldsStandard-cta">
      {{> cta CTA }}
    </div>
  </div>
  <div class="HitchhikerAllFieldsStandard-footerWrapper">
    <div class="HitchhikerAllFieldsStandard-footer">
      {{> footer }}
    </div>
  </div>
</div>

{{#*inline 'icon'}}
<div class="HitchhikerAllFieldsStandard-titleIconWrapper"
  data-component="IconComponent"
  data-opts='{
    "iconName": "{{iconName}}",
    "iconUrl": "{{iconUrl}}"
  }'
  data-prop="icon"
></div> 
{{/inline}}

{{#*inline 'title'}}
{{#if entityName}}
<span class="HitchhikerAllFieldsStandard-entityName">
  {{entityName}}
</span>
{{#if fieldName}}
<span class="HitchhikerAllFieldsStandard-slash">
  /
</span>
<span class="HitchhikerAllFieldsStandard-fieldName">
  {{fieldName}}
</span>
{{/if}}
{{/if}}
{{/inline}}

{{#*inline 'content'}}
{{#if value}}
<div class="HitchhikerAllFieldsStandard-fieldValue">
  {{#if isArray}}
    <ul class = "HitchhikerAllFieldsStandard-ul">
    {{#each value}}
      {{#if this.url}}
      <li><a class="HitchhikerAllFieldsStandard-fieldValueLink" href={{{this.url}}}>{{{this.displayText}}}</a></li>
      {{else}}
      <li>{{{this}}}</li>
      {{/if}}
    {{/each}}
    </ul>
  {{else}}
    {{#if value.url}}
      <a class="HitchhikerAllFieldsStandard-fieldValueLink" href={{{value.url}}}>{{{value.displayText}}}</a>
      {{else}}
      {{{value}}}
    {{/if}}
  {{/if}}
</div>
{{/if}}
{{/inline}}

{{#*inline 'details'}}
{{#if viewDetailsLink}}
  <div class="HitchhikerAllFieldsStandard-viewMoreWrapper">
    <a class="HitchhikerAllFieldsStandard-viewMore"
        href="{{viewDetailsLink}}"
        data-eventtype="CTA_CLICK"
        data-eventoptions="{{viewDetailsEventOptions}}"
        target="{{#if linkTarget}}{{linkTarget}}{{else}}_blank{{/if}}">
      {{viewDetailsText}}
    </a>
  </div>
{{/if}}
{{/inline}}

{{#*inline 'footer'}}
{{#if feedbackSubmitted}}
<div class="HitchhikerAllFieldsStandard-footerText">
    {{footerTextOnSubmission}}
</div>
{{else}}
  <div class="HitchhikerAllFieldsStandard-footerText">
    {{footerText}}
  </div>
  <form class="HitchhikerAllFieldsStandard-thumbs js-HitchhikerAllFieldsStandard-feedbackForm">
    <fieldset class="HitchhikerAllFieldsStandard-fieldset">
    <legend class="sr-only">
      {{footerText}}
    </legend>
    <label class="HitchhikerAllFieldsStandard-thumb">
      <span class="HitchhikerAllFieldsStandard-thumbUpIcon"
            data-component="IconComponent"
            data-opts='{"iconName": "thumb"}'
            data-prop="icon"
      ></span>
      <input type="radio"
              name="feedback"
              value="true"
              class="HitchhikerAllFieldsStandard-feedback HitchhikerAllFieldsStandard-thumbUpButton js-HitchhikerAllFieldsStandard-thumbInput">
      <span class="sr-only">
        {{positiveFeedbackSrText}}
      </span>
    </label>
    <label class="HitchhikerAllFieldsStandard-thumb">
      <span class="HitchhikerAllFieldsStandard-thumbDownIcon"
            data-component="IconComponent"
            data-opts='{"iconName": "thumb"}'
            data-prop="icon"
      ></span>
      <input type="radio"
              name="feedback"
              value="false"
              class="HitchhikerAllFieldsStandard-feedback HitchhikerAllFieldsStandard-thumbDownButton js-HitchhikerAllFieldsStandard-thumbInput">
      <span class="sr-only">
        {{negativeFeedbackSrText}}
      </span>
    </label>
    </fieldset>
    <button type="submit" class="sr-only sr-only-focusable">Send feedback</button>
  </form>
{{/if}}
{{/inline}}

{{#*inline 'cta'}}
{{#if (all url label)}}
<a class="HitchhikerCTA js-HitchhikerCTA{{#if modifiers}} {{modifiers}}{{/if}}" href="{{url}}"
  data-eventtype="{{eventType}}" data-eventoptions='{{json eventOptions}}'
  target="{{#if target}}{{target}}{{else}}_top{{/if}}">
  {{#if (any iconName iconUrl)}}
  <div class="HitchhikerCTA-iconWrapper">
    <div class="HitchhikerCTA-icon" data-component="IconComponent" data-opts='{
      "iconUrl": "{{iconUrl}}",
      "iconName": "{{iconName}}"
    }'></div>
  </div>
  {{/if}}
  <div class='HitchhikerCTA-iconLabel'>
    {{label}}
  </div>
</a>
{{/if}}
{{/inline}}