{{#if isSearchComplete}}
  {{#if showNoResults}}
    {{> noResults}}
  {{/if}}
  {{#if resultsPresent}}
    <section class="HitchhikerResultsStandard HitchhikerResultsStandard--{{_config.modifier}}{{#if _config.isUniversal}} HitchhikerResultsStandard--universal{{/if}}">
      {{> header}}
      {{> map}}
      {{> results}}
      {{> viewMore}}
    </section>
  {{/if}}
{{/if}}

{{#*inline "noResults"}}
  {{#if useLegacyNoResults}}
    {{> results/noresults}}
  {{else}}
    <div class="HitchhikerResultsStandard-alternativeVerticals"
          data-component="AlternativeVerticals"></div>
  {{/if}}
{{/inline}}


{{#*inline "header"}}
  {{#if _config.isUniversal}}
    <div class="HitchhikerResultsStandard-title">
      {{#if iconIsBuiltIn}}
        <div data-component="IconComponent" data-opts='{ "iconName": "{{ _config.icon }}" }'></div>
      {{else}}
        <div data-component="IconComponent" data-opts='{ "iconUrl": "{{ _config.icon }}" }'></div>
      {{/if}}
      <div class="HitchhikerResultsStandard-titleLabel">{{_config.title}}</div>
    </div>
  {{/if}}
  {{#if showResultsHeader}}
    <div data-component="ResultsHeader"></div>
  {{/if}}
{{/inline}}

{{#*inline "results"}}
  <div class="HitchhikerResultsStandard-items js-HitchhikerResultsStandard-items{{#if numColumns}} HitchhikerResultsStandard-items--{{numColumns}}{{/if}}">
    {{#each results}}
      <div class="HitchhikerResultsStandard-Card{{#if ../_config.isUniversal}} HitchhikerResultsStandard-Card--universal{{/if}}"
        data-component="Card"
        data-opts='{ "_index": {{@index}} }'>
      </div>
    {{/each}}
    {{#each placeholders}}
      <div class="HitchhikerResultsStandard-Card-placeholder" aria-hidden="true"></div>
    {{/each}}
  </div>
{{/inline}}

{{#*inline "map"}}
  {{#if _config.includeMap}}
    <div class="HitchhikerResultsStandard-map"
          data-component="Map"
          data-prop="map">
    </div>
  {{/if}}
{{/inline}}

{{#*inline "viewMore"}}
  {{#if _config.isUniversal}}
    <div class="HitchhikerResultsStandard-viewMore">
      <a class="HitchhikerResultsStandard-viewMoreLink" href="{{ verticalURL }}">
        <div class="HitchhikerResultsStandard-viewMoreLabel">{{_config.viewMoreLabel}}</div>
        <div data-component="IconComponent" data-opts='{ "iconName": "chevron" }'></div>
      </a>
    </div>
  {{/if}}
{{/inline}}